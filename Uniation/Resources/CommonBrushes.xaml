<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Здесь цвета даны для примера, замените на те, которые есть в макете-->
    <Color x:Key="BlackColor">#292929</Color>
    <Color x:Key="YellowColor">#FFBE02</Color>
    <Color x:Key="OrangeColor">#FE6A02</Color>
    <Color x:Key="AlmostWhite">#ECF5EF</Color>

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource BlackColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource YellowColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource OrangeColor}"/>
    <SolidColorBrush x:Key="ThirdBrush" Color="{StaticResource AlmostWhite}"/>
</ResourceDictionary>